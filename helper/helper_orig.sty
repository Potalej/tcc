% VETOR, PRIMEIRA E SEGUNDA DERIVADAS DE VETOR
\newcommand{\vet}[1]{\bm #1}
\newcommand{\dvet}[1]{\bm {\dot #1}}
\newcommand{\ddvet}[1]{\bm {\ddot #1}}
% VERSOR
\newcommand{\versor}[1]{\hat{\vet #1}}
% PRODUTO INTERNO
\newcommand{\prodint}[2]{\left\langle #1, #2 \right\rangle}
% NORMA
\newcommand\norma[1]{\left\Vert #1 \right\Vert}

% CONJUNTOS
\newcommand{\R}{\mathbb{R}} % Reais
\newcommand{\Complexos}{\mathbb{C}} % Complexos
\newcommand\continuo{{\mathscr{C}}} % Espaços C^k

% DERIVADA
\newcommand{\der}[2]{\dfrac{d #1}{d #2}}
% DERIVADA PARCIAL
\newcommand{\derpar}[2]{\dfrac{\partial #1}{\partial #2}}

% HAMILTONIANO
\newcommand{\Ham}{{\cal H}}

% ESPACAMENTO DE CELULAS
\setlength\cellspacetoplimit{3pt}
